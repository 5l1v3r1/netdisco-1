#!/usr/bin/env perl

use strict;
use warnings FATAL => 'all';

BEGIN {
  eval "use Daemon::Control";
  if ($@) {
      exec("$ENV{HOME}/bin/localenv", $0, @ARGV);
  }
}

Daemon::Control->new({
  name => 'Netdisco Web',
  program  => 'plackup',
  program_args => ["$ENV{HOME}/bin/netdisco-web-fg"],
  pid_file => "$ENV{HOME}/netdisco-web.pid",
})->run;
